# Emoji picker on Super + ;
unbind = SUPER CTRL, E, Emoji picker, exec, omarchy-launch-walker -m symbols
bindd = SUPER, SEMICOLON, Emoji picker, exec, omarchy-launch-walker -m symbols

# Manual screensaver (will require password to exit)
unbind = SUPER CTRL, L, Lock system, exec, omarchy-lock-screen
bindd = SUPER CTRL, L, Manual screensaver, exec, ~/.config/hypr/scripts/custom-screensaver-launch.sh



# Captures
unbind = , PRINT, Screenshot with editing, exec, omarchy-cmd-screenshot
unbind = SHIFT, PRINT, Screenshot to clipboard, exec, omarchy-cmd-screenshot smart clipboard
unbind = ALT, PRINT, Screenrecording, exec, omarchy-menu screenrecord
unbind = SUPER, PRINT, Color picker, exec, pkill hyprpicker || hyprpicker -a
bindd = SUPER CTRL SHIFT, S, Screenshot to clipboard, exec, omarchy-cmd-screenshot smart clipboard
bindd = SUPER CTRL SHIFT, R, Screenrecording, exec, omarchy-menu screenrecord



